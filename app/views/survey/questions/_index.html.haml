%h3 Questions:
- if @questions
  %table
    %thead
      %tr
        %th Title
    %tbody
      - @questions.each do |question|
        %tr
          %td= question.title
          %td= question.class
          %td= link_to 'Show', poll_question_path(@poll, question)
          %td= link_to 'Edit', edit_poll_question_path(@poll, question)
          %td= link_to 'Destroy', poll_question_path(@poll, question), method: :delete, data: { confirm: 'Are you sure?' }
= link_to 'New plain question', new_poll_question_path(@poll)
= link_to 'New boolean question', new_poll_boolean_question_path(@poll)
= link_to 'New single choice question', new_poll_single_choice_question_path(@poll)
= link_to 'New multiple choice question', new_poll_multiple_choice_question_path(@poll)